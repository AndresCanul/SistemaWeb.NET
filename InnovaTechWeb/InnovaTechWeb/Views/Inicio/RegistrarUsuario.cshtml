@model InnovaTechWeb.Entidades.Usuario

@{
    ViewBag.Title = "RegistrarUsuario";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<section class="section register min-vh-80 d-flex flex-column align-items-center justify-content-center py-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6 d-flex flex-column align-items-center justify-content-center">

                <div class="d-flex justify-content-center py-4">
                    <a href="index.html" class="logo d-flex align-items-center w-auto">
                        <img src="~/Estilos/img/logo.png" alt="">
                        <span class="d-none d-lg-block">INNOVATECH</span>
                    </a>
                </div><!-- End Logo -->

                <div class="card mb-3">

                    <div class="card-body">

                        <div class="pt-4 pb-2">
                            <h5 class="card-title text-center pb-0 fs-4">Crea una cuenta</h5>
                            <p class="text-center small">Ingrese sus datos para crear una cuenta</p>
                        </div>

                        @if (ViewBag.MsjPantalla != null)
                        {
                            <div class="alert alert-warning" role="alert" style="text-align:center">
                                @ViewBag.MsjPantalla
                            </div>
                        }

                        @using (Html.BeginForm("RegistrarUsuario", "Inicio", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {

                            <div class="form-group col-12">
                                @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control form-control-user", @placeholder = "Nombre", @required = "true" })
                                <div class="invalid-feedback">Por favor, ingrese su nombre!</div>
                            </div>
                            <br />
                            <div class="form-group col-12">
                                @Html.TextBoxFor(m => m.ApellidoUsuario, new { @class = "form-control form-control-user", @placeholder = "Apellido", @required = "true" })
                                <div class="invalid-feedback">Por favor, ingrese su nombre!</div>
                            </div>
                            <br />
                            <div class="form-group col-12">
                                @Html.TextBoxFor(m => m.Edad, new { @class = "form-control form-control-user", @placeholder = "Edad", @type = "number", @required = "true" })
                                <div class="invalid-feedback">Por favor, ingrese su nombre!</div>
                            </div>
                            <br />
                            <div class="form-group col-12">
                                @Html.TextBoxFor(m => m.Correo, new { @class = "form-control form-control-user", @placeholder = "Correo", @type = "Email", @required = "true" })
                                <div class="invalid-feedback">Ingrese un correo valido!</div>
                            </div>
                            <br />
                            <div class="form-group col-12">
                                @Html.Label("Distrito")
                                @Html.DropDownListFor(m => m.IdUbicacion, ViewBag.ListaDistritos as List<SelectListItem>, new { @class = "form-control form-control-user", @required = "true" })
                            </div>
                            <br />
                            <div class="form-group col-12">
                                @Html.PasswordFor(m => m.Clave, new { @class = "form-control form-control-user", @placeholder = "Contraseña", @required = "true" })
                                <div class="invalid-feedback">Por favor, ingrese una contraseña!</div>
                            </div>
                            <br />
                            <div class="form-group col-12">
                                @Html.Label("Imagen")
                                <input type="file" id="ImagenUsuario" name="ImagenUsuario" class="form-control form-control-user" required>
                            </div>
                            <br />
                            <div class="text-center">
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Procesar">
                            </div>
                        }
                        <hr>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("RecuperarAccesoUsuario", "Inicio")">Recuperar Acceso</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("IniciarSesion", "Inicio")">Iniciar Sesion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>